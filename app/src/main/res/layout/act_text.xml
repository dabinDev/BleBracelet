<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:text="我的"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhite"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/colorBackText"
            android:gravity="center"
            android:drawableStart="@mipmap/enter"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="宝贝信息"
            android:background="@color/colorWhite"
            android:textSize="@dimen/text_size_20"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/info_line"
        android:layout_width="match_parent"
        android:background="@color/colorDividerGray"
        android:layout_below="@id/rl_top"
        android:layout_height="0.5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:scrollbars="none"
        android:layout_below="@id/info_line"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_15"
            android:lineHeight="17dp"
            tools:text="as建档立卡结算单拉三季度拉屎当老师决定离开时倒垃圾对啦大酒店阿萨德as领导阿拉山口到了开始对啦啊手机登录as激烈的按时间的按理说当老师对啦as打算领导爱上了大是了as"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>