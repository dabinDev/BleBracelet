<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:text="宝贝信息"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhite"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/colorBackText"
            android:gravity="center"
            android:drawableStart="@mipmap/enter"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            tools:text="修改昵称"
            android:background="@color/colorWhite"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/info_line"
        android:layout_width="match_parent"
        android:background="@color/colorDividerGray"
        android:layout_below="@id/rl_top"
        android:layout_height="0.5dp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/info_line"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:hint="请输入昵称"
        android:textSize="@dimen/text_size_19"
        android:textColorHint="@color/colorSecondaryText"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btn_do_set"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/shape_square_blue"
        android:clickable="true"
        android:gravity="center"
        android:text="确认设置"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_19" />
</RelativeLayout>